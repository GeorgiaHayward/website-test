{
  "colors": {
    "background": "#FFFFFF",
    "foreground": "#000000",
    "primary": "#000000",
    "secondary": "#FFFFFF",
    "border": "#000000",
    "cardBackground": "#FFFFFF",
    "cardBorder": "#000000"
  },
  "typography": {
    "fontFamily": "'Inter', 'Arial', sans-serif",
    "heading": {
      "fontWeight": "bold",
      "textTransform": "uppercase",
      "fontSize": {
        "h1": "2rem",
        "h2": "1.5rem",
        "h3": "1.2rem"
      },
      "letterSpacing": "0.05em"
    },
    "body": {
      "fontWeight": "normal",
      "fontSize": "1rem",
      "textTransform": "none"
    },
    "nav": {
      "fontWeight": "bold",
      "textTransform": "uppercase",
      "fontSize": "1.1rem"
    }
  },
  "layout": {
    "containerPadding": "1.5rem",
    "sectionSpacing": "2rem",
    "card": {
      "borderRadius": "1rem",
      "borderWidth": "2px",
      "borderStyle": "solid",
      "borderColor": "#000000",
      "padding": "1rem",
      "margin": "1rem 0"
    },
    "grid": {
      "columns": 2,
      "gap": "1rem"
    }
  },
  "icons": {
    "arrow": "simple, outlined, black",
    "home": "eye or home icon, outlined, black"
  },
  "buttons": {
    "background": "#FFFFFF",
    "color": "#000000",
    "border": "2px solid #000000",
    "borderRadius": "1rem",
    "padding": "0.75rem 1.5rem",
    "fontWeight": "bold",
    "textTransform": "uppercase"
  },
  "effects": {
    "shadow": "none",
    "hover": {
      "background": "#F0F0F0"
    }
  }
} 